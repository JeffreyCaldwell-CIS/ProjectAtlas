using System.Collections.Generic;
using System.IO;
using System.Text.Json;

namespace Core4Dispatch.Services
{
    public static class JsonStorageService
    {
        private static readonly JsonSerializerOptions options = new JsonSerializerOptions
        {
            WriteIndented = true,
            PropertyNameCaseInsensitive = true
        };

        public static void SaveData<T>(string filePath, List<T> data)
        {
            string json = JsonSerializer.Serialize(data, options);
            File.WriteAllText(filePath, json);
        }

        public static List<T> LoadData<T>(string filePath)
        {
            if (!File.Exists(filePath))
            {
                // If file doesnâ€™t exist yet, create an empty JSON array
                File.WriteAllText(filePath, "[]");
                return new List<T>();
            }

            string json = File.ReadAllText(filePath);

            if (string.IsNullOrWhiteSpace(json))
                return new List<T>();

            return JsonSerializer.Deserialize<List<T>>(json, options) 
                ?? new List<T>();
        }
    }
}
